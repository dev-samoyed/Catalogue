@using Catalogue.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Вход в систему</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href=@Url.Content("~/favicon.png") />
    <!--===============================================================================================-->
    @Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/fonts/font-awesome-4.7.0/css/font-awesome.min.css")
    <!--===============================================================================================-->
    @Styles.Render("~/Content/vendor/animate/animate.css")
    <!--===============================================================================================-->
    @Styles.Render("~/Content/vendor/css-hamburgers/hamburgers.min.css")
    <!--===============================================================================================-->
    @*@Styles.Render("~/Content/vendor/select2/select2.min.css")*@
    <!--===============================================================================================-->
    @Styles.Render("~/Content/css/util.css")
    @Styles.Render("~/Content/css/main.css")
    <!--===============================================================================================-->

</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="@Url.Content("~/Content/assets/img/img-01.png")" alt="IMG">
                </div>
                <div class="txt3">
                    <span class="font" style="align-content: center;">
                        НАЦИОНАЛЬНЫЙ СТАТИСТИЧЕСКИЙ КОМИТЕТ КЫРГЫЗСКОЙ РЕСПУБЛИКИ
                    </span>
                </div>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <form class="login100-form validate-form">
                <div class="txt2">
                    <h3 class="font">Вход</h3><span class="font">Перейти на страницу Администратора</span>
                    <!--<p class="login100-form-title" data-a11y-title-piece="" id="headingSubtext"></p>-->
                </div>

                <div class="wrap-input100 validate-input">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @required = "required", @type = "email", placeholder = "Введите Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input">
                    @Html.PasswordFor(m => m.Password, new { @class = "input100", @required = "required", placeholder = "Введите пароль" })
                    @Html.ValidationMessageFor(m => m.Password)
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>


                <div class="text-center p-t-10">
                    <div class="col-md-offset-2 col-md-10" style="padding-left: 0px; padding-right: 115px;">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "remember" })
                        </div>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <input type="button" class="btn btn-secondary" id="login100-form-btn" value="Hазад" onclick="location.href='@Url.Action("Index", "Home")';return false;">
                    <input class="login100-form-btn" value="Войти" type="submit">
                </div>
            </form>
}
            </div>
        </div>
        </div>
        <!--===============================================================================================-->
        <script src="@Url.Content("~/Content/vendor/jquery/jquery-3.2.1.min.js")"></script>
        <!--===============================================================================================-->
        <script src="@Url.Content("~/Content/vendor/bootstrap/js/popper.js")"></script>
        <script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.min.js")"></script>
        <!--===============================================================================================-->
        @*<script src="@Url.Content("~/Content/vendor/select2/select2.min.js")"></script>*@
        <!--===============================================================================================-->
        <script src="@Url.Content("~/Content/vendor/tilt/tilt.jquery.min.js")"></script>
        <script src="@Url.Content("~/Content/vendor/bootstrap/js/new.js")"></script>
        <!--===============================================================================================-->
        <script src="@Url.Content("~/Scripts/js/main.js")"></script>

    </body>
</html>
